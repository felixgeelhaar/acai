---
interface Props {
  title: string;
  description: string;
  icon: string;
  color: 'accent' | 'accent-secondary' | 'green' | 'orange' | 'red' | 'cyan';
}

const { title, description, icon, color } = Astro.props;

const colorMap = {
  accent: 'border-t-accent',
  'accent-secondary': 'border-t-accent-secondary',
  green: 'border-t-green',
  orange: 'border-t-orange',
  red: 'border-t-red',
  cyan: 'border-t-cyan',
};

const iconColorMap = {
  accent: 'text-accent',
  'accent-secondary': 'text-accent-secondary',
  green: 'text-green',
  orange: 'text-orange',
  red: 'text-red',
  cyan: 'text-cyan',
};
---

<div class={`rounded-lg border border-border bg-bg-card p-6 border-t-2 ${colorMap[color]} hover:bg-bg-secondary transition-colors duration-200`}>
  <div class={`text-2xl mb-3 ${iconColorMap[color]}`}>{icon}</div>
  <h3 class="text-lg font-semibold text-text-primary mb-2">{title}</h3>
  <p class="text-sm text-text-secondary mb-4">{description}</p>
  <div class="text-sm">
    <slot />
  </div>
</div>
