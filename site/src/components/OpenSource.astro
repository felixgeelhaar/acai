---
const coverageData = [
  { layer: 'Domain', coverage: '94-100%', color: 'text-green' },
  { layer: 'Application', coverage: '86-100%', color: 'text-green' },
  { layer: 'Infrastructure', coverage: '85-97%', color: 'text-accent' },
  { layer: 'Interfaces', coverage: '74-81%', color: 'text-accent' },
];
---

<section id="open-source">
  <div class="max-w-5xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-4">Open Source</h2>
      <p class="text-text-secondary max-w-2xl mx-auto">
        Production-grade quality, fully tested, MIT licensed.
      </p>
    </div>

    <!-- Big stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-10">
      <div class="rounded-lg border border-border bg-bg-card p-6 text-center">
        <div class="text-3xl font-bold text-green mb-1">377</div>
        <div class="text-sm text-text-muted">Tests</div>
      </div>
      <div class="rounded-lg border border-border bg-bg-card p-6 text-center">
        <div class="text-3xl font-bold text-accent mb-1">82.7%</div>
        <div class="text-sm text-text-muted">Coverage</div>
      </div>
      <div class="rounded-lg border border-border bg-bg-card p-6 text-center">
        <div class="text-3xl font-bold text-red mb-1">0</div>
        <div class="text-sm text-text-muted">Race Conditions</div>
      </div>
      <div class="rounded-lg border border-border bg-bg-card p-6 text-center">
        <div class="text-3xl font-bold text-accent-secondary mb-1">MIT</div>
        <div class="text-sm text-text-muted">License</div>
      </div>
    </div>

    <!-- Coverage table -->
    <div class="max-w-md mx-auto mb-10">
      <div class="rounded-lg border border-border bg-bg-card overflow-hidden">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-border">
              <th class="px-4 py-3 text-left text-text-muted font-medium">Layer</th>
              <th class="px-4 py-3 text-right text-text-muted font-medium">Coverage</th>
            </tr>
          </thead>
          <tbody>
            {coverageData.map((row, i) => (
              <tr class={i % 2 === 0 ? 'bg-bg-card' : 'bg-bg-secondary/50'}>
                <td class="px-4 py-2 text-text-primary">{row.layer}</td>
                <td class={`px-4 py-2 text-right font-mono font-semibold ${row.color}`}>{row.coverage}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <a href="https://github.com/felixgeelhaar/acai" target="_blank" rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-accent text-bg-primary font-semibold hover:bg-accent/90 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
        </svg>
        Star on GitHub
      </a>
    </div>
  </div>
</section>
