---
interface Props {
  title?: string;
}

const { title = 'Terminal' } = Astro.props;
---

<div class="rounded-lg overflow-hidden border border-border bg-bg-secondary">
  <!-- macOS title bar -->
  <div class="flex items-center gap-2 px-4 py-2.5 bg-bg-card border-b border-border">
    <div class="flex gap-1.5">
      <span class="w-3 h-3 rounded-full bg-red"></span>
      <span class="w-3 h-3 rounded-full bg-orange"></span>
      <span class="w-3 h-3 rounded-full bg-green"></span>
    </div>
    <span class="text-xs text-text-muted ml-2 font-mono">{title}</span>
  </div>
  <!-- Terminal content -->
  <div class="p-4 font-mono text-sm leading-relaxed overflow-x-auto">
    <slot />
  </div>
</div>
