---
import TerminalWindow from './TerminalWindow.astro';
import StatBadge from './StatBadge.astro';
---

<section class="relative pt-24 pb-20 overflow-hidden">
  <!-- Gradient orb background -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] opacity-20 pointer-events-none"
    style="background: radial-gradient(ellipse at center, var(--color-accent) 0%, var(--color-accent-secondary) 40%, transparent 70%);">
  </div>

  <div class="relative max-w-5xl mx-auto px-6 text-center">
    <!-- Logo -->
    <div class="mb-8 flex justify-center">
      <img src={`${import.meta.env.BASE_URL}/favicon.svg`} alt="acai logo" class="w-16 h-16" />
    </div>

    <!-- Heading -->
    <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6">
      <span class="gradient-text">Meeting Intelligence</span>
      <br />
      <span class="text-text-primary">for AI Agents</span>
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-xl text-text-secondary max-w-2xl mx-auto mb-10">
      A Go CLI and MCP server that makes Granola meeting data a first-class citizen
      in AI agent workflows. Meetings, transcripts, summaries, and action items as
      structured MCP resources.
    </p>

    <!-- CTAs -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <a href="#quickstart"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-accent text-bg-primary font-semibold hover:bg-accent/90 transition-colors">
        Get Started
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
      </a>
      <a href="https://github.com/felixgeelhaar/acai" target="_blank" rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-border text-text-primary font-semibold hover:bg-bg-card transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
        </svg>
        View on GitHub
      </a>
    </div>

    <!-- Terminal -->
    <div class="max-w-2xl mx-auto mb-10">
      <TerminalWindow title="~">
        <div>
          <span class="text-green">$</span>
          <span class="text-text-secondary"> brew tap felixgeelhaar/tap && brew install acai</span>
        </div>
      </TerminalWindow>
    </div>

    <!-- Stats -->
    <div class="flex flex-wrap justify-center gap-3">
      <StatBadge value="377" label="tests" color="green" />
      <StatBadge value="82.7%" label="coverage" color="accent" />
      <StatBadge value="MIT" label="license" color="accent-secondary" />
    </div>
  </div>
</section>
